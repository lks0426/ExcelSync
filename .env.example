# ExcelSync Environment Configuration

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Backend Configuration  
FLASK_ENV=development
FLASK_DEBUG=true
MAX_CONTENT_LENGTH=16777216

# AWS Configuration (for ECS deployment)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# ECR Configuration
ECR_REGISTRY=123456789012.dkr.ecr.us-west-2.amazonaws.com
ECR_REPOSITORY_FRONTEND=excelsync-frontend
ECR_REPOSITORY_BACKEND=excelsync-backend

# ECS Configuration
ECS_CLUSTER=excelsync-cluster
ECS_SERVICE_FRONTEND=excelsync-frontend-service
ECS_SERVICE_BACKEND=excelsync-backend-service
ECS_TASK_DEFINITION_FRONTEND=excelsync-frontend-task
ECS_TASK_DEFINITION_BACKEND=excelsync-backend-task

# Security Configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# Database Configuration (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/excelsync

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Upload Configuration
MAX_FILE_SIZE=16MB
ALLOWED_EXTENSIONS=md,markdown,txt
UPLOAD_FOLDER=uploads
OUTPUT_FOLDER=output

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10